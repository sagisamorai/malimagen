generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Users (synced from Clerk via webhook)
// ============================================

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id         String   @id // Clerk user ID
  email      String   @unique
  firstName  String?
  lastName   String?
  imageUrl   String?
  role       UserRole @default(VIEWER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  properties Property[]
  blogPosts  BlogPost[]
  contacts   Contact[]

  @@map("users")
}

// ============================================
// Properties (Real Estate Listings)
// ============================================

enum PropertyType {
  APARTMENT     // דירה
  GARDEN_APT    // דירת גן
  PENTHOUSE     // פנטהאוז
  COTTAGE       // קוטג'
  DUPLEX        // דופלקס
  STUDIO        // סטודיו
  LAND          // מגרש
  COMMERCIAL    // מסחרי
}

enum PropertyStatus {
  FOR_SALE      // למכירה
  FOR_RENT      // להשכרה
  SOLD          // נמכר
  RENTED        // הושכר
}

model Property {
  id            String         @id @default(cuid())
  title         String
  slug          String         @unique
  description   String         @db.Text
  price         Int
  type          PropertyType
  status        PropertyStatus @default(FOR_SALE)

  // Location
  address       String
  city          String         @default("ראש העין")
  neighborhood  String?
  complex       String?        // מתחם A / B

  // Details
  rooms         Float          // 3, 4, 4.5, 5
  floor         Int?
  totalFloors   Int?
  sizeBuilt     Int            // מ"ר בנוי
  sizeGarden    Int?           // מ"ר גינה/מרפסת
  yearBuilt     Int?

  // Amenities
  parking       Boolean        @default(false)
  storage       Boolean        @default(false)
  safeRoom      Boolean        @default(false) // ממ"ד
  elevator      Boolean        @default(false)
  airCondition  Boolean        @default(false)
  balcony       Boolean        @default(false)
  renovated     Boolean        @default(false)
  accessible    Boolean        @default(false)

  // Media
  images        PropertyImage[]
  featuredImage String?

  // SEO
  seoTitle       String?
  seoDescription String?       @db.Text
  seoKeywords    String?

  // Flags
  featured      Boolean        @default(false)
  published     Boolean        @default(true)

  // Relations
  area          Area?          @relation(fields: [areaId], references: [id])
  areaId        String?
  author        User           @relation(fields: [authorId], references: [id])
  authorId      String

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([status, published])
  @@index([type])
  @@index([areaId])
  @@index([featured, published])
  @@map("properties")
}

model PropertyImage {
  id         String   @id @default(cuid())
  url        String
  alt        String?
  order      Int      @default(0)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String
  createdAt  DateTime @default(now())

  @@index([propertyId])
  @@map("property_images")
}

// ============================================
// Areas / Neighborhoods
// ============================================

model Area {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?    @db.Text
  city        String     @default("ראש העין")
  properties  Property[]

  @@map("areas")
}

// ============================================
// Blog
// ============================================

model BlogPost {
  id             String    @id @default(cuid())
  title          String
  slug           String    @unique
  excerpt        String?   @db.Text
  content        String    @db.Text
  featuredImage  String?
  published      Boolean   @default(false)
  publishedAt    DateTime?

  // SEO
  seoTitle       String?
  seoDescription String?   @db.Text
  seoKeywords    String?

  // Relations
  author         User      @relation(fields: [authorId], references: [id])
  authorId       String
  category       BlogCategory? @relation(fields: [categoryId], references: [id])
  categoryId     String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([published, publishedAt])
  @@index([categoryId])
  @@map("blog_posts")
}

model BlogCategory {
  id    String     @id @default(cuid())
  name  String     @unique
  slug  String     @unique
  posts BlogPost[]

  @@map("blog_categories")
}

// ============================================
// Testimonials
// ============================================

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  content   String   @db.Text
  rating    Int      @default(5) // 1-5
  imageUrl  String?
  published Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  @@map("testimonials")
}

// ============================================
// Contact Form Submissions
// ============================================

model Contact {
  id         String   @id @default(cuid())
  name       String
  phone      String
  email      String?
  message    String?  @db.Text
  propertyId String?
  source     String?  // which page the form was submitted from
  read       Boolean  @default(false)
  assignedTo User?    @relation(fields: [assignedToId], references: [id])
  assignedToId String?
  createdAt  DateTime @default(now())

  @@index([read])
  @@map("contacts")
}

// ============================================
// Site Settings (key-value store)
// ============================================

model SiteSetting {
  key       String   @id
  value     String   @db.Text
  updatedAt DateTime @updatedAt

  @@map("site_settings")
}
